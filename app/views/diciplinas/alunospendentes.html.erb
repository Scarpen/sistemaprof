<%= render 'links' %>
<% if @diciplina.professor?(current_user) %>
	 


	<h1> Alunos Pendentes </h1>
	<div class="row-fluid">
		<% @diciplina.pendentes.each do |a| %>
			<div class="span4">
				<div class="row">
				  <div class="col-sm-6 col-md-4">
				    <div class="thumbnail">
				      
				      <div class="caption">
				        <h3><%=a.nome%></h3>
				        <%= image_tag a.avatar_url %> 
					    <%= link_to 'Mostrar', action: 'show', controller: 'alunos', id: a.id, :class => 'btn btn-primary btn-small' %>
						<%= link_to 'Aceitar',  :action => 'aceitar', :controller => 'diciplinas', :aluno => a.id,         :diciplina => @diciplina.id %>
						<%= link_to 'Recusar',  :action => 'recusar', :controller => 'diciplinas', :aluno => a.id,         :diciplina => @diciplina.id, :class => 'btn btn-primary btn-small'%>
							 
				      </div>
				    </div>
				  </div>
				</div>
			</div>
		<% end %>
	</div>

	<% if @diciplina.pendentes == [] %>
		Não há alunos pendentes no momento.
	<% end %>

<% end %>
