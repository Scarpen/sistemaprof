<%= render 'links' %>
<div class="tab-pane active" id="tab1">
<% if @diciplina.professor?(current_user) %>
	<h1> Alunos Inscritos </h1>
	<div class="row-fluid">
		<% @diciplina.inscritos.each do |a| %>
			<div class="span2">
				<div class="row">
				  <div class="col-sm-6 col-md-4">
				    <div class="thumbnail">
				       <h3><%= link_to a.nome, aluno_path(a)%></h3>
				      <div class="caption">
				       <p>Matricula:<%= a.matricula %></p>
				        <%= image_tag a.avatar_url %> 
				        <ul>
				        </br>
							<%= link_to 'Desagregar',  {:action => 'recusar', :controller => 'diciplinas', :aluno => a.id, :diciplina => @diciplina.id},:class => 'btn btn-small btn-danger' %>
						</ul>
							 
				      </div>
				    </div>
				  </div>
				</div>
			</div>
		<% end %>
	</div>

<%end%>
</div>