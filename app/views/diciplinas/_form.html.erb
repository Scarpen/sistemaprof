<%= form_for @diciplina, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :conteudo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :conteudo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :professor_id, :class => 'control-label' %>
    <div class="controls">
          <%= f.text_field :professor_id, disabled: true, placeholder: current_user.nome %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                diciplinas_path, :class => 'btn' %>
  </div>

  <%= f.hidden_field :professor_id, { :value => current_user.id} %>
<% end %>
